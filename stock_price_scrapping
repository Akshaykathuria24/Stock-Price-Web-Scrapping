import numpy as np
import requests
from bs4 import BeautifulSoup
import pandas as pd
import os

url = requests.get("https://www.investing.com/equities/apple-computer-inc")
soup = BeautifulSoup(url.content, 'html.parser')
rows = soup.findAll(class_='text-5xl/9 font-bold text-[#232526] md:text-[42px] md:leading-[60px]')

# print(len(rows))  

# for row in rows:
    # print(row)
     
if rows:
    price = rows.get_text()
    print("Price:", price)
else:
    print("Price not found")


